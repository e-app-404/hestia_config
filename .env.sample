# Copy to .env and adjust locally as needed.
export HA_MOUNT="${HA_MOUNT:-$HOME/hass}"
export HA_MOUNT_OPERATOR="/Volumes/HA"
export CONFIG_MOUNT="$HA_MOUNT/config"
export DIR_HESTIA="$CONFIG_MOUNT/hestia"
export DIR_PACKAGES="$CONFIG_MOUNT/packages"
export DIR_DOMAINS="$CONFIG_MOUNT/domain"

## Hestia Four-Pillar Architecture Paths (canonicalized 2025-09-30)
export HESTIA_CONFIG="$DIR_HESTIA/config"              # Runtime & machine-first configs
export HESTIA_LIBRARY="$DIR_HESTIA/library"            # Knowledge, docs & references  
export HESTIA_TOOLS="$DIR_HESTIA/tools"                # Scripts, utilities & automation
export HESTIA_WORKSPACE="$DIR_HESTIA/workspace"        # Operations, cache & transient

## Hestia Key Subdirectories
export HESTIA_ADR="$HESTIA_LIBRARY/docs/ADR"           # Architecture Decision Records
export HESTIA_DEVICES="$HESTIA_CONFIG/devices"         # Device configurations
export HESTIA_NETWORK="$HESTIA_CONFIG/network"         # Network topology & configs
export HESTIA_VAULT="$HESTIA_WORKSPACE/archive/vault"  # Secure storage & backups
export HESTIA_CACHE="$HESTIA_WORKSPACE/cache"          # Temporary & work files
export HESTIA_PROMPTS="$HESTIA_LIBRARY/prompts"        # Curated prompt library
export HESTIA_GOVERNANCE="$HESTIA_LIBRARY/docs/governance" # System instructions & personas

